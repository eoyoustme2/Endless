---====== Run entity ======---

entity:Run()

---====== Custom logic: Hiding and chasing ======---

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local rootPart = character:WaitForChild("HumanoidRootPart")

-- Biến kiểm soát đuổi theo
local isChasing = false
local chaseTween

-- Hàm đuổi theo player bằng tween
-- Hàm đuổi theo người chơi bằng tween (sửa lại như bạn yêu cầu)
local function chasePlayer()
	if not entity.Model or not entity.Model:FindFirstChild("HumanoidRootPart") then return end

	local camera = workspace.CurrentCamera
	local entityRoot = entity.Model.HumanoidRootPart
	local humanoidRootPart = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
	if not humanoidRootPart then return end

	local targetPosition = humanoidRootPart.Position + humanoidRootPart.CFrame.LookVector * 4
	local moveTweenInfo = TweenInfo.new(2, Enum.EasingStyle.Linear)
	local moveTweenGoal = {
		CFrame = CFrame.new(targetPosition, camera.CFrame.Position)
	}

	if chaseTween then chaseTween:Cancel() end
	chaseTween = TweenService:Create(entityRoot, moveTweenInfo, moveTweenGoal)
	chaseTween:Play()
end

-- Theo dõi liên tục trạng thái "Hiding"
RunService.RenderStepped:Connect(function()
	if not entity.Model or not entity.IsRunning then return end
	local hiding = character:GetAttribute("Hiding")

	if hiding then
		-- Nếu đang ẩn => dừng đuổi, entity đi bình thường
		if isChasing then
			isChasing = false
			if chaseTween then chaseTween:Cancel() end
			print("Người chơi đang ẩn — dừng đuổi theo")
			entity.Movement.Speed = 50
		end
	else
		-- Nếu không ẩn => đuổi theo bằng tween
		if not isChasing then
			isChasing = true
			print("Người chơi không ẩn — bắt đầu đuổi theo bằng tween")
			entity.Movement.Speed = 0
		end
		chasePlayer()
	end
end)
